{
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(gh project:*)",
      "Bash(gh repo view:*)",
      "Bash(git checkout:*)",
      "Bash(./format)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Skill(datastore)",
      "Bash(./gradlew:*)",
      "Bash(xargs:*)",
      "Bash(.scripts/generate_module:*)",
      "Skill(check)",
      "Bash(./check:*)",
      "Bash(./detekt:*)",
      "Bash(git push:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh label:*)",
      "Bash(gh api:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:zacsweers.github.io)",
      "Bash(tree:*)",
      "Bash(ls:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/block-dangerous-git.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate-branch-name.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-before-push.sh",
            "timeout": 600
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/auto-format-kotlin.sh",
            "timeout": 60,
            "async": true
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/run-detekt-after-edit.sh",
            "timeout": 120,
            "async": true
          }
        ]
      }
    ]
  }
}
